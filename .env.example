# Azure Configuration
AZURE_STORAGE_CONNECTION_STRING=your_storage_connection_string_here
AZURE_COSMOSDB_CONNECTION_STRING=your_cosmosdb_connection_string_here
AZURE_COMMUNICATION_SERVICES_CONNECTION_STRING=your_communication_services_connection_string_here

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your_openai_api_key_here
AZURE_OPENAI_MODEL=gpt-4.1
AZURE_OPENAI_EMBED_DEPLOYMENT=embedding-model-deployment

# Email Configuration
DEFAULT_SENDER_EMAIL=your_sender_email@domain.com

# Validation Configuration
MAX_FILE_SIZE_MB=50
SUPPORTED_FILE_TYPES=xlsx

# Agents & Data Tools
FABRIC_ENDPOINT=https://your-fabric-endpoint
FABRIC_TOKEN=your_fabric_bearer_token
FABRIC_SQL_MODE=http  # http|odbc
FABRIC_ODBC_CONNECTION_STRING=
SEARCH_ENDPOINT=https://yoursearch.search.windows.net
SEARCH_INDEX=contracts
SEARCH_API_KEY=your_search_api_key
SEARCH_API_VERSION=2021-04-30-Preview
SEARCH_USE_SEMANTIC=false
SEARCH_HYBRID=false
SEARCH_VECTOR_FIELD=pageEmbedding
GRAPH_ENDPOINT=https://graph.microsoft.com/v1.0
GRAPH_TOKEN=

# AAD for Graph On-Behalf-Of (optional; enables delegated Graph without hardcoding tokens)
OBO_ENABLED=false
AAD_TENANT_ID=
AAD_CLIENT_ID=
AAD_CLIENT_SECRET=

# Teams/Copilot packaging helpers
APP_HOSTNAME=your-function-app.azurewebsites.net
APP_ID_URI=api://your-app-id-or-uri
TEAMS_BOT_APP_ID=
APP_VERSION=0.1.0

# Reminder job
REMINDER_DAYS_OLD=3
REMINDER_MAX_ITEMS=100

# Search data source seeding (infra/scripts/seed_search.sh)
SEARCH_DS_CONNECTION_STRING=${AZURE_STORAGE_CONNECTION_STRING}
SEARCH_DS_CONTAINER=contracts

# Power BI deep link (optional)
PBI_WORKSPACE_ID=
PBI_REPORT_ID=
PBI_DATE_COLUMN=vw_Variance/ShipDate
